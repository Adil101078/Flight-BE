<script>
   ValidateSearch = function () {
        
      
        if ($('#hid_origin').val() == "") {
            alert("Kindlly select departure airport from auto suggest list");
            $('#_origin').val('');
            $('#_origin').focus();
            return false;
        }
        else if ($('#hid_destination').val() == "") {
            alert("Kindlly select destination airport from auto suggest list");
            $('#_destination').val('');
            $('#_destination').focus();
            return false;
        }
        let jType = $('#_jtype').val()
        console.log(jType)
        let _departure
        let url
        let _return

        if(jType == 'r'){
            const str = $('#_departDate').val()
            const arr = str.split(/-|\s/);
            _departure = arr[0]
            _return = arr[arr.length-1]
            url = `${window.location.origin}/flight/wait?Origin=${$('#hid_origin').val()}&Destination=${$('#hid_destination').val()}&Adults=${$('#_adults').val()}&Childs=${$('#_children').val()}&Infants=${$('#_infants').val()}&Departure=${_departure}&jType=${jType}&ClassOfService=${ $('#cabin_class').val()}&ReturnDate=${_return}`
        } else {
            url=`${window.location.origin}/flight/wait?Origin=${$('#hid_origin').val()}&Destination=${$('#hid_destination').val()}&Adults=${$('#_adults').val()}&Childs=${$('#_children').val()}&Infants=${$('#_infants').val()}&Departure=${$('#_departDate').val()}&jType=${jType}&ClassOfService=${ $('#cabin_class').val()}`
        }
      
        window.location.href = url
    }
